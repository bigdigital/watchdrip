<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Huamixdrip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:itemBackground">@color/black</item>-->

        <item name="android:itemTextAppearance">@style/menuItem</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/menu_text_color_secondary</item>
    </style>

    <style name="Theme.Huamixdrip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Huamixdrip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Huamixdrip.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>
